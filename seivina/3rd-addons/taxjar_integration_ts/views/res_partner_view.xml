<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record model="ir.ui.view" id="res_partner_view_taxjar">
        <field name="name">res.partner.view.taxjar</field>
        <field name="model">res.partner</field>
        <field name="inherit_id" ref="base.view_partner_form"/>
        <field name="arch" type="xml">
            <xpath expr="//group[@name='misc']" position="before">
                <group string="TaxJar" name="taxjar" priority="5" groups="account.group_account_invoice">
                    <field name="ts_exemption_type"/>
                </group>
            </xpath>
            <xpath expr="//field[@name='country_id']" position="replace">
                <field name="country_id" placeholder="Country" class="o_address_country" options='{"no_open": True, "no_create": True}' readonly="type == 'contact' and parent_id"
                       style="width:75%;" invisible="not show_taxjar_address_validation"/>
                <field name="country_id" placeholder="Country" class="o_address_country" options='{"no_open": True, "no_create": True}' readonly="type == 'contact' and parent_id"
                       invisible="show_taxjar_address_validation"/>
            </xpath>
            <xpath expr="//div[@name='partner_address_country']" position="inside">
                <field name="show_taxjar_address_validation" invisible="1"/>
                <button class="btn-link"
                        type="object" icon="fa-address-card"
                        name="action_open_taxjar_address_validation_wizard"
                        string="Validate(TaxJar)" invisible="not show_taxjar_address_validation"/>
            </xpath>
        </field>
    </record>
</odoo>

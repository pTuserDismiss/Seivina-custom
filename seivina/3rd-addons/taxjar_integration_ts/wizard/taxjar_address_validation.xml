<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="taxjar_address_validation_view_form_1" model="ir.ui.view">
        <field name="name">taxjar.address.validation.view.form1</field>
        <field name="model">taxjar.address.validation</field>
        <field name="arch" type="xml">
            <form>
                <field name="partner_id" invisible="1"/>
                <group>
                    <group string="Verified Address">
                        <field name="verified_street" readonly="1"/>
                        <field name="verified_city" readonly="1"/>
                        <field name="verified_zip" readonly="1"/>
                        <field name="verified_state_id" readonly="1"/>
                        <field name="verified_country_id" readonly="1"/>
                    </group>
                    <group string="Original Address">
                        <field name="street"/>
                        <field name="city"/>
                        <field name="zip"/>
                        <field name="state_id"/>
                        <field name="country_id"/>
                    </group>
                </group>
                <footer>
                    <button name="action_save_verified_address" type="object" default_focus="1" string="Save" class="oe_highlight"/>
                    <button string="Cancel" class="btn btn-secondary" special="cancel"/>
                </footer>
            </form>
        </field>
    </record>

    <record id="taxjar_address_validation_view_form_2" model="ir.ui.view">
        <field name="name">taxjar.address.validation.view.form2</field>
        <field name="model">taxjar.address.validation</field>
        <field name="arch" type="xml">
            <form>
                <field name="partner_id" invisible="1"/>
                <group string="Original Address">
                    <group>
                        <field name="street"/>
                        <field name="state_id"/>
                        <field name="country_id"/>
                    </group>
                    <group>
                        <field name="city"/>
                        <field name="zip"/>
                    </group>
                </group>
                <group string="Verified Addresses">
                    <field name="taxjar_verified_address_ids" readonly="1" nolabel="1" colspan="2">
                        <list>
                            <field name="street"/>
                            <field name="city"/>
                            <field name="zip"/>
                            <field name="state_id"/>
                            <field name="country_id"/>
                            <button name="action_save_verified_address" class="oe_link" icon="fa-check" type="object" string="Save"/>
                        </list>
                    </field>
                </group>
                <footer>
                    <button string="Cancel" class="btn btn-secondary" special="cancel"/>
                </footer>
            </form>
        </field>
    </record>
</odoo>

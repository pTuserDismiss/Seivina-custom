<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record model="ir.ui.view" id="sh_mrp_production_form_view_inherit">
        <field name="name">mrp.production.form.inherited</field>
        <field name="model">mrp.production</field>
        <field name="inherit_id" ref="mrp.mrp_production_form_view"/>
        <field name="arch" type="xml">
            <xpath expr="//field[@name='move_raw_ids']" position="before">
                <button name="action_add_substitute" string="Add Substitute" type="object" class="oe_highlight" invisible="state != 'confirmed'" groups="sh_mrp_substitute.group_allow_substitute_product"/>
            </xpath>
        </field>
    </record>
    
</odoo>

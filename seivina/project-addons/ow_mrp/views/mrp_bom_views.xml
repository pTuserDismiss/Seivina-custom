<?xml version="1.0" encoding="utf-8" ?>
<odoo>
    <record id="view_mrp_bom_form_ow_mrp" model="ir.ui.view">
        <field name="name">mrp.bom.form.ow.mrp</field>
        <field name="model">mrp.bom</field>
        <field name="inherit_id" ref="mrp.mrp_bom_form_view"/>
        <field name="arch" type="xml">
            <xpath expr="//field[@name='bom_line_ids']//field[@name='product_id']" position="attributes">
                <attribute name="readonly">component_template_id</attribute>
                <attribute name="invisible">component_template_id</attribute>
            </xpath>
            <xpath expr="//field[@name='bom_line_ids']//field[@name='component_template_id']" position="attributes">
                <attribute name="readonly">not component_template_id and product_id</attribute>
                <attribute name="invisible">not component_template_id and product_id</attribute>
            </xpath>
            <xpath expr="//field[@name='bom_line_ids']/list" position="inside">
                <field name="product_uom_id" column_invisible="1" readonly="0"/>
                <button name="action_view_substitutes" type="object" string="View Substitutes" icon="fa-bars"/>
            </xpath>
        </field>
    </record>

    <record id="view_mrp_bom_line_form_ow_mrp_substitute" model="ir.ui.view">
        <field name="name">mrp.bom.line.form.ow.mrp.substitute</field>
        <field name="model">mrp.bom.line</field>
        <field name="priority" eval="100"/>
        <field name="arch" type="xml">
            <form string="Define Substitutes">
                <group name="general">
                    <group>
                        <field name="product_id" readonly="1" invisible="component_template_id"/>
                        <field name="component_template_id" readonly="1" invisible="not component_template_id"/>
                        <field name="product_uom_category_id" invisible="1"/>
                        <label for="product_qty" invisible="not product_id and not component_template_id"/>
                        <div class="o_row" invisible="not product_id and not component_template_id">
                            <field name="product_qty" readonly="1"/>
                            <field name="product_uom_id" options="{'no_open': True, 'no_create': True}" groups="uom.group_uom" readonly="1"/>
                        </div>
                    </group>
                </group>
                <group name="substitution" string="Substitutes">
                    <field name="substitute_ids" nolabel="1">
                        <list editable="bottom">
                            <field name="sequence" widget="handle"/>
                            <field name="product_id" invisible="bom_line_component_template_id" required="not bom_line_component_template_id"/>
                            <field name="product_template_id" invisible="not bom_line_component_template_id" required="bom_line_component_template_id"/>
                            <field name="product_uom_category_id" column_invisible="1"/>
                            <field name="product_uom_qty"/>
                            <field name="product_uom_id" options="{'no_open':True,'no_create':True}" groups="uom.group_uom"/>
                        </list>
                    </field>
                </group>

                <footer>
                    <button string="Save" special="save" class="btn btn-primary"/>
                    <button string="Cancel" special="cancel" class="btn btn-secondary"/>
                </footer>
            </form>
        </field>
    </record>
</odoo>

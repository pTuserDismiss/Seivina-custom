<?xml version="1.0" encoding="utf-8" ?>
<odoo>
    <record id="view_mrp_production_form_ow_mrp" model="ir.ui.view">
        <field name="name">mrp.production.form.ow.mrp</field>
        <field name="model">mrp.production</field>
        <field name="inherit_id" ref="mrp.mrp_production_form_view"/>
        <field name="arch" type="xml">
            <xpath expr="//header" position="before">
                <field name="ready_to_mark_done" invisible="1"/>
                <widget name="web_ribbon" title="Ready to Mark as Done" bg_color="text-bg-success" invisible="not ready_to_mark_done" style="z-index: 999; position: relative; top: 0; right: 0;"/>
            </xpath>
            <field name="move_raw_ids" position="before">
                <button name="action_substitute" string="Add Substitute" type="object" class="oe_highlight"
                        invisible="state != 'confirmed'" groups="ow_mrp.group_allow_substitute_product"/>
            </field>
            <xpath expr="//field[@name='move_raw_ids']/list/field[@name='product_id']" position="after">
                <field name="is_substitute"/>
            </xpath>
        </field>
    </record>
</odoo>

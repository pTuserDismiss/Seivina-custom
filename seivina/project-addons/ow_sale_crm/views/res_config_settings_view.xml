<?xml version="1.0" encoding="UTF-8" ?>
<odoo>
    <record id="view_res_config_settings_form_ow_sale_crm" model="ir.ui.view">
        <field name="name">res.config.settings.form.ow.sale.crm</field>
        <field name="model">res.config.settings</field>
        <field name="inherit_id" ref="website_sale.res_config_settings_view_form"/>
        <field name="arch" type="xml">
            <xpath expr="//block[@id='website_shop_checkout']" position="inside">
                <setting id="generate_opportunity" string="Generate Opportunity" help="Auto generate CRM opportunities for unpaid orders">
                    <field colspan="2" name="generate_opportunity"/>
                </setting>
            </xpath>
        </field>
    </record>
</odoo>

<?xml version="1.0" encoding="utf-8" ?>
<odoo>
    <record id="crm_lead_form_view_inherit" model="ir.ui.view">
        <field name="name">crm.lead.form.large.order</field>
        <field name="model">crm.lead</field>
        <field name="inherit_id" ref="crm.crm_lead_view_form"/>
        <field name="arch" type="xml">
            <xpath expr="//header" position="inside">
                <button name="action_send_large_order_notification"
                        type="object"
                        string="Large Order Notification"
                        invisible="not is_large_order"
                />
            </xpath>
        </field>
    </record>

    <record id="view_crm_case_opportunities_filter" model="ir.ui.view">
        <field name="name">crm.lead.search.opportunity</field>
        <field name="model">crm.lead</field>
        <field name="inherit_id" ref="crm.view_crm_case_opportunities_filter"/>
        <field name="arch" type="xml">
            <filter name="open_opportunities" position="after">
                <filter name="large_orders"
                        string="Large Orders"
                        domain="[('is_large_order', '=', True)]"
                />
            </filter>
        </field>
    </record>
</odoo>

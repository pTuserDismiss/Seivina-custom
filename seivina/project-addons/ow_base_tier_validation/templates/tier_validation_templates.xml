<?xml version="1.0" encoding="UTF-8" ?>
<odoo>
    <template id="tier_validation_buttons_inherit_ow" inherit_id="base_tier_validation.tier_validation_buttons">
        <button name="request_validation" position="after">
            <button
                name="request_cancel"
                string="Request Cancel"
                t-attf-invisible="not need_validation or rejected or hide_reviews or not require_cancel_approval"
                type="object"
            />
            <button
                name="request_delete"
                string="Request Delete"
                t-attf-invisible="not need_validation or rejected or hide_reviews or not require_delete_approval"
                type="object"
            />
        </button>
    </template>
    <template id="tier_all_action_validation_label">
        <div>
            <div
                class="alert alert-warning mb-0"
                role="alert"
                t-attf-invisible="is_cancel_validation or is_delete_validation or validated or hide_reviews or rejected or not review_ids"
            >
                <p class="mb-1">
                <i class="fa fa-lg fa-info-circle" />
                This Record needs to be
                validated.
                <button
                    name="validate_tier"
                    string="Validate"
                    invisible="not can_review"
                    type="object"
                    class="btn-icon me-1 btn-success"
                    icon="fa-thumbs-up"
                />
                <button
                    name="reject_tier"
                    string="Reject"
                    invisible="not can_review"
                    type="object"
                    class="btn-icon btn-danger"
                    icon="fa-thumbs-down"
                />
                <br /><field name="next_review" readonly="1" />
            </p>
            </div>
            <div
                class="alert alert-success mb-0"
                role="alert"
                t-attf-invisible="is_cancel_validation or is_delete_validation or not validated or hide_reviews or not review_ids"
            >
                <p class="mb-1">
                <i class="fa fa-lg fa-thumbs-up" />
                Operation has been
                <b>validated</b>
                !
            </p>
            </div>
            <div
                class="alert alert-danger mb-0"
                role="alert"
                t-attf-invisible="is_cancel_validation or is_delete_validation or not rejected or hide_reviews or not review_ids"
            >
                <p class="mb-1">
                <i class="fa fa-lg fa-thumbs-down" />
                Operation has been
                <b>rejected</b>
                .
            </p>
            </div>
            <div
                class="alert alert-warning mb-0"
                role="alert"
                t-attf-invisible="not is_cancel_validation or validated or hide_reviews or rejected or not review_ids"
            >
                <p class="mb-1">
                <i class="fa fa-lg fa-info-circle" />
                This record has a request for approval to cancel.
                <button
                    name="validate_tier"
                    string="Approve"
                    invisible="not can_review"
                    type="object"
                    class="btn-icon me-1 btn-success"
                    icon="fa-thumbs-up"
                />
                <button
                    name="reject_tier"
                    string="Reject"
                    invisible="not can_review"
                    type="object"
                    class="btn-icon btn-danger"
                    icon="fa-thumbs-down"
                />
                <br /><field name="next_review" readonly="1" />
            </p>
            </div>
            <div
                class="alert alert-success mb-0"
                role="alert"
                t-attf-invisible="not is_cancel_validation or not validated or hide_reviews or not review_ids"
            >
                <p class="mb-1">
                <i class="fa fa-lg fa-thumbs-up" />
                Cancel Operation has been
                <b>validated</b>
                !
            </p>
            </div>
            <div
                class="alert alert-danger mb-0"
                role="alert"
                t-attf-invisible="not is_cancel_validation or not rejected or hide_reviews or not review_ids"
            >
                <p class="mb-1">
                <i class="fa fa-lg fa-thumbs-down" />
                Cancel Operation has been
                <b>rejected</b>
                .
            </p>
            </div>
            <div
                class="alert alert-warning mb-0"
                role="alert"
                t-attf-invisible="not is_delete_validation or validated or hide_reviews or rejected or not review_ids"
            >
                <p class="mb-1">
                <i class="fa fa-lg fa-info-circle" />
                This record has a request for approval to delete.
                <button
                    name="validate_tier"
                    string="Approve"
                    invisible="not can_review"
                    type="object"
                    class="btn-icon me-1 btn-success"
                    icon="fa-thumbs-up"
                />
                <button
                    name="reject_tier"
                    string="Reject"
                    invisible="not can_review"
                    type="object"
                    class="btn-icon btn-danger"
                    icon="fa-thumbs-down"
                />
                <br /><field name="next_review" readonly="1" />
            </p>
            </div>
            <div
                class="alert alert-success mb-0"
                role="alert"
                t-attf-invisible="not is_delete_validation or not validated or hide_reviews or not review_ids"
            >
                <p class="mb-1">
                <i class="fa fa-lg fa-thumbs-up" />
                Delete Operation has been
                <b>validated</b>
                !
            </p>
            </div>
            <div
                class="alert alert-danger mb-0"
                role="alert"
                t-attf-invisible="not is_delete_validation or not rejected or hide_reviews or not review_ids"
            >
                <p class="mb-1">
                <i class="fa fa-lg fa-thumbs-down" />
                Delete Operation has been
                <b>rejected</b>
                .
            </p>
            </div>
        </div>
    </template>
</odoo>

<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="view_approval_log_form" model="ir.ui.view">
        <field name="name">approval.log.form</field>
        <field name="model">approval.log</field>
        <field name="arch" type="xml">
            <form string="Approval Log">
                <div class="alert alert-info" role="alert" invisible="not reason">
                    <field name="reason" nolabel="1" readonly="1"/>
                </div>
                <sheet>
                    <widget name="web_ribbon" title="Approved" bg_color="text-bg-success" invisible="state != 'approved'"/>
                    <widget name="web_ribbon" title="Rejected" bg_color="text-bg-danger" invisible="state != 'rejected'"/>
                    <group>
                        <group name="activity" string="Activities">
                            <field name="create_date"/>
                            <field name="create_uid"/>
                            <field name="reviewer_uid" readonly="1"/>
                            <field name="note" readonly="1"/>
                        </group>
                        <group name="ref" string="References">
                            <field name="res_model" readonly="1"/>
                            <field name="res_id" readonly="1"/>
                            <field name="reference" widget="reference"/>
                        </group>
                    </group>
                    <group>
                        <group name="traceback" string="Traceback" invisible="not error_msg">
                            <field name="error_msg" readonly="1"/>
                        </group>
                        <group name="technical" string="Technical" groups="base.group_no_one">
                            <field name="method_approved" readonly="1"/>
                            <field name="method_rejected" readonly="1"/>
                        </group>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <record id="view_approval_log_list" model="ir.ui.view">
        <field name="name">approval.log.list</field>
        <field name="model">approval.log</field>
        <field name="arch" type="xml">
            <list string="Approval Logs">
                <field name="create_date" string="Date"/>
                <field name="res_model" optional="show"/>
                <field name="res_id" optional="show"/>
                <field name="reference" widget="reference"/>
                <field name="create_uid" string="Requester"/>
                <field name="reviewer_uid"/>
                <field name="reason" optional="show"/>
                <field name="note" optional="show"/>
                <field name="state" widget="badge" decoration-danger="state == 'rejected'" decoration-success="state == 'approved'"/>
            </list>
        </field>
    </record>

    <record id="action_approval_log" model="ir.actions.act_window">
        <field name="name">Approval Logs</field>
        <field name="res_model">approval.log</field>
        <field name="view_mode">list,form</field>
    </record>

    <menuitem id="menu_approval_log" action="action_approval_log" parent="mail.menu_mail_activities_section" sequence="40"/>
</odoo>

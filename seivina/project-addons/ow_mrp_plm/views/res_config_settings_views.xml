        <field name="model">res.config.settings</field>
        <field name="inherit_id" ref="mrp.res_config_settings_view_form"/>
        <field name="arch" type="xml">
            <xpath expr="//block[@name='process_operations_setting_container']" position="inside">
                <setting id="prevent_bom_create_edit" help="Prevent users from creating or editing Bills of Materials" title="Prevent create/edit BOM">

<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="mrp_eco_view_form" model="ir.ui.view">
        <field name="name">mrp.eco.view.form.inherit</field>
        <field name="model">mrp.eco</field>
        <field name="inherit_id" ref="mrp_plm.mrp_eco_view_form"/>
        <field name="arch" type="xml">
            <field name="bom_id" position="attributes">
                <attribute name="required">type == 'both'</attribute>
            </field>
            <xpath expr="//field[@name='bom_change_ids_on_line']//field[@name='product_id']" position="after">
                <field name="component_product_tmpl_id"/>
            </xpath>
            <xpath expr="//sheet" position="before">
                <div class="alert alert-warning d-flex justify-content-between align-items-center" invisible="not show_qt9_banner or not id">
                    <span>Please re-upload the ECO record to QT9 for document control</span>
                    <div style="margin-left: auto; border: 1px solid black; border-radius: 4px;">
                        <button name="action_confirm_qt9_reupload" string="Confirm" class="btn-light" type="object"/>
                    </div>
                </div>
            </xpath>
        </field>
    </record>
</odoo>

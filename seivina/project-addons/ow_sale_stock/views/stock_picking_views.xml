<?xml version="1.0" encoding="UTF-8" ?>
<odoo>
    <record id="view_picking_form" model="ir.ui.view">
        <field name="name">sale.stock.view.picking.form</field>
        <field name="model">stock.picking</field>
        <field name="inherit_id" ref="stock.view_picking_form"/>
        <field name="arch" type="xml">
            <xpath expr="//header" position="inside">
                <button name="action_send_tracking_to_customer"
                        type="object"
                        string="Send Tracking"
                        class="btn-primary"
                        confirm="Are you sure you want to send Tracking Reference to the customer?"
                        invisible="state != 'done' or picking_type_code != 'outgoing'"/>
            </xpath>
        </field>
    </record>
</odoo>

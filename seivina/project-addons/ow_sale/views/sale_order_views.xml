<?xml version="1.0" encoding="UTF-8" ?>
<odoo>
    <record id="view_order_form" model="ir.ui.view">
        <field name="name">sale.order.form.ow.sale</field>
        <field name="model">sale.order</field>
        <field name="inherit_id" ref="sale.view_order_form"/>
        <field name="arch" type="xml">
            <field name="client_order_ref" position="after">
                <field name="is_customer_po_mandatory"/>
            </field>
            <field name="client_order_ref" position="attributes">
                <attribute name="required">is_customer_po_mandatory</attribute>
            </field>
            <field name="commitment_date" position="attributes">
                <attribute name="readonly">not user_has_group_sales_admin</attribute>
            </field>
        </field>
    </record>
</odoo>

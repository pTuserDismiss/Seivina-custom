<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="helpdesk_worksheet_template_action_settings" model="ir.actions.act_window" >
        <field name="name">Worksheet Templates</field>
        <field name="res_model">worksheet.template</field>
        <field name="view_mode">list,graph,pivot,form</field>
        <field name="domain">[('res_model', '=', 'helpdesk.ticket')]</field>
        <field name="context">
            {
                'default_res_model': 'helpdesk.ticket',
            }
        </field>
    </record>

    <menuitem id="helpdesk_worksheet_template"
        name="Worksheet Templates"
        sequence="100"
        action="helpdesk_worksheet_template_action_settings"
        parent="helpdesk.helpdesk_menu_config"
        groups="helpdesk.group_helpdesk_manager"/>

</odoo>

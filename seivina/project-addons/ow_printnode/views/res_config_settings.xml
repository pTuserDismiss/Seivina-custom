<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="res_config_settings_view_form" model="ir.ui.view">
        <field name="name">Settings</field>
        <field name="model">res.config.settings</field>
        <field name="inherit_id" ref="printnode_base.res_config_settings_view_form" />
        <field name="arch" type="xml">
            <field name="printnode_printer" position="attributes">
                <attribute name="options">{}</attribute>
            </field>
            <field name="printnode_printer" position="after" colspan="4">
                <label for="inspection_label_printer_blue_id" string="Printer for Blue Inspection Label" class="col-4 col-lg-4 o_light_label mt16" />
                <field name="inspection_label_printer_blue_id" readonly="not printnode_enabled" class="oe_inline mt16"/>
                <label for="inspection_label_printer_white_id" string="Printer for White Inspection Label" class="col-4 col-lg-4 o_light_label mt16" />
                <field name="inspection_label_printer_white_id" readonly="not printnode_enabled" class="oe_inline mt16"/>
                <label for="inspection_label_printer_yellow_id" string="Printer for Yellow Inspection Label" class="col-4 col-lg-4 o_light_label mt16" />
                <field name="inspection_label_printer_yellow_id" readonly="not printnode_enabled" class="oe_inline mt16"/>
            </field>
        </field>
    </record>
</odoo>

<?xml version="1.0" encoding="UTF-8" ?>
<odoo>
    <record id="view_sale_order_form_sale_deposit" model="ir.ui.view">
        <field name="name">sale.order.deposit.form.view</field>
        <field name="model">sale.order</field>
        <field name="inherit_id" ref="sale.view_order_form"/>
        <field name="arch" type="xml">
            <xpath expr="//button[@name='action_quotation_send']" position="before">
                <button name="action_make_a_deposit"
                        string="Create deposit"
                        type="object"
                        invisible="invoice_status == 'invoiced' or state not in ['sale', 'done']"
                        groups="account.group_account_invoice"/>
            </xpath>
            <div name="button_box" position="inside">
                <button name="action_view_deposit" type="object" class="oe_stat_button" icon="fa-money"
                        invisible="deposit_count == 0" groups="account.group_account_readonly">
                    <field name="deposit_count" widget="statinfo" string="Deposits"/>
                </button>
            </div>
            <group name="sale_total" position="inside">
                <field name="deposit_count" invisible="1"/>

                <table class="float-end" invisible="deposit_count == 0">
                    <tbody>
                        <tr>
                            <td class="o_td_label"><label for="deposit_total"/></td>
                            <td class="o_list_monetary" style="font-weight: bold;"><field name="deposit_total" nolabel="1"/></td>
                        </tr>
                        <tr>
                            <td class="o_td_label"><label for="remaining_total"/></td>
                            <td class="o_list_monetary" style="font-size: 1.3em; font-weight: bold;"><field name="remaining_total" nolabel="1"/></td>
                        </tr>
                    </tbody>
                </table>
            </group>
        </field>
    </record>
</odoo>

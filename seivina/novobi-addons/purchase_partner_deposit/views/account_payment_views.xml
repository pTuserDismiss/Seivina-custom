<?xml version="1.0" encoding="UTF-8" ?>
<odoo>
    <record id="view_account_payment_form_purchase_deposit" model="ir.ui.view">
        <field name="name">view_account_payment_purchase_deposit_form</field>
        <field name="model">account.payment</field>
        <field name="inherit_id" ref="account_partner_deposit.view_account_payment_form_account_deposit"/>
        <field name="arch" type="xml">
            <field name="partner_id" position="after">
                <field name="purchase_deposit_id" options="{'no_create': True}" force_save="1"
                    readonly="state != 'draft' or not partner_id"
                    invisible="not is_deposit or partner_type != 'supplier'"/>
            </field>
        </field>
    </record>
</odoo>

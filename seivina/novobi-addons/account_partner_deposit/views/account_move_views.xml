<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="view_account_move_form_account_deposit" model="ir.ui.view">
        <field name="name">account.move.form.account.deposit</field>
        <field name="model">account.move</field>
        <field name="inherit_id" ref="account.view_move_form"/>
        <field name="arch" type="xml">
            <field name="invoice_outstanding_credits_debits_widget" position="after">
                <field name="deposit_outstanding_credits_debits_widget"
                       class="oe_invoice_outstanding_credits_debits"
                       colspan="2" nolabel="1" widget="payment"
                       invisible="state != 'posted' or not invoice_has_outstanding"/>
            </field>
        </field>
    </record>
</odoo>

<?xml version="1.0" encoding="UTF-8" ?>
<odoo>
    <!--Deposit form and tree-->
    <record id="view_account_payment_form_account_deposit" model="ir.ui.view">
        <field name="name">account.payment.form.account.deposit</field>
        <field name="model">account.payment</field>
        <field name="inherit_id" ref="account.view_account_payment_form"/>
        <field name="mode">primary</field>
        <field name="arch" type="xml">
            <field name="journal_id" position="before">
                <field name="is_deposit" invisible="1"/>
                <field name="related_commercial_partner_id" invisible="1"/>
                <field name="property_account_customer_deposit_id" string="Deposit Account" options="{'no_create': True}"
                    invisible="not (is_deposit and partner_type == 'customer')"
                    required="is_deposit and partner_type == 'customer'"
                    readonly="state != 'draft'"/>
                <field name="property_account_vendor_deposit_id" string="Deposit Account" options="{'no_create': True}"
                    invisible="not (is_deposit and partner_type == 'supplier')"
                    required="is_deposit and partner_type == 'supplier'"
                    readonly="state != 'draft'"/>
            </field>
            <xpath expr="//field[@name='partner_id'][1]" position="attributes">
                <attribute name="required">1</attribute>
            </xpath>
            <xpath expr="//field[@name='partner_id'][2]" position="attributes">
                <attribute name="required">1</attribute>
            </xpath>
            <field name="payment_type" position="attributes">
                <attribute name="readonly">state != 'draft'</attribute>
                <attribute name="invisible">is_deposit</attribute>
            </field>
            <field name="partner_type" position="attributes">
                <attribute name="readonly">state != 'draft' or is_deposit</attribute>
            </field>
        </field>
    </record>

    <record id="view_account_payment_list_customer_deposit" model="ir.ui.view">
        <field name="name">account.payment.list.customer.deposit</field>
        <field name="model">account.payment</field>
        <field name="inherit_id" ref="account.view_account_payment_tree"/>
        <field name="mode">primary</field>
        <field name="arch" type="xml">
            <field name="currency_id" position="after">
                <field name="is_deposit" invisible="1"/>
                <field name="payment_type" invisible="1"/>
            </field>
        </field>
    </record>

    <record id="view_account_payment_list_supplier_deposit" model="ir.ui.view">
        <field name="name">account.payment.list.supplier.deposit</field>
        <field name="model">account.payment</field>
        <field name="inherit_id" ref="account.view_account_supplier_payment_tree"/>
        <field name="mode">primary</field>
        <field name="arch" type="xml">
            <field name="currency_id" position="after">
                <field name="is_deposit" invisible="1"/>
                <field name="payment_type" invisible="1"/>
            </field>
        </field>
    </record>

    <!--Deposit menus-->
    <record id="action_account_payment_customer_deposit" model="ir.actions.act_window">
        <field name="name">Customer Deposits</field>
        <field name="res_model">account.payment</field>
        <field name="view_mode">list,form</field>
        <field name="view_ids" eval="[
                (5, 0, 0),
                (0, 0, {'view_mode': 'list', 'view_id': ref('account_partner_deposit.view_account_payment_list_customer_deposit')}),
                (0, 0, {'view_mode': 'form', 'view_id': ref('account_partner_deposit.view_account_payment_form_account_deposit')})
        ]"/>
        <field name="context">{
            'default_payment_type': 'inbound',
            'default_partner_type': 'customer',
            'default_is_deposit': 1,
            'default_move_journal_types': ('bank', 'cash'),
            'titleDisplay': 'Search by Total Amount',
            'compareField': 'amount_total_signed',
            'searchByAmountFilter': 1,
        }</field>
        <field name="domain">[('is_deposit', '=', True), ('payment_type', '=', 'inbound'), ('partner_type', '=', 'customer')]</field>
    </record>

    <record id="action_account_payment_supplier_deposit" model="ir.actions.act_window">
        <field name="name">Vendor Deposits</field>
        <field name="res_model">account.payment</field>
        <field name="view_mode">list,form</field>
        <field name="view_ids" eval="[
                (5, 0, 0),
                (0, 0, {'view_mode': 'list', 'view_id': ref('account_partner_deposit.view_account_payment_list_supplier_deposit')}),
                (0, 0, {'view_mode': 'form', 'view_id': ref('account_partner_deposit.view_account_payment_form_account_deposit')})
        ]"/>
        <field name="context">{
            'default_payment_type': 'outbound',
            'default_partner_type': 'supplier',
            'default_is_deposit': 1,
            'default_move_journal_types': ('bank', 'cash'),
            'titleDisplay': 'Search by Total Amount',
            'compareField': 'amount_total_signed',
            'searchByAmountFilter': 1,
        }</field>
        <field name="domain">[('is_deposit', '=', True), ('payment_type', '=', 'outbound'), ('partner_type', '=', 'supplier')]</field>
    </record>

    <menuitem id="menu_account_payment_customer_deposit" action="action_account_payment_customer_deposit" sequence="16" parent="account.menu_finance_receivables"/>
    <menuitem id="menu_account_payment_supplier_deposit" action="action_account_payment_supplier_deposit" sequence="20" parent="account.menu_finance_payables"/>

    <!--Payment popup form when creating deposit from order-->
    <record id="account_payment_deposit_from_order_form_view" model="ir.ui.view">
        <field name="name">account.payment.deposit.from.order.form.view</field>
        <field name="model">account.payment</field>
        <field name="inherit_id" ref="view_account_payment_form_account_deposit"/>
        <field name="mode">primary</field>
        <field name="priority">100</field>
        <field name="arch" type="xml">
            <xpath expr="//header" position="attributes">
                <attribute name="invisible">1</attribute>
            </xpath>
            <xpath expr="//div[@name='button_box']" position="attributes">
                <attribute name="invisible">1</attribute>
            </xpath>
            <xpath expr="//sheet" position='after'>
                <footer>
                    <field name="state" invisible="1"/>
                    <button string="Validate" name="action_post" type="object" class="btn-primary"/>
                    <button string="Cancel" class="btn-secondary" special="cancel"/>
                </footer>
            </xpath>
            <xpath expr="//field[@name='partner_id'][1]" position="attributes">
                <attribute name="readonly">1</attribute>
            </xpath>
            <xpath expr="//field[@name='partner_id'][2]" position="attributes">
                <attribute name="readonly">1</attribute>
            </xpath>
        </field>
    </record>
</odoo>

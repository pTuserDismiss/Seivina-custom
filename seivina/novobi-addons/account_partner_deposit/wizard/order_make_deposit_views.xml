<?xml version="1.0" encoding="UTF-8" ?>
<odoo>
    <record id="view_order_make_deposit_form" model="ir.ui.view">
        <field name="name">order.make.deposit.form</field>
        <field name="model">order.make.deposit</field>
        <field name="arch" type="xml">
            <form>
                <group>
                    <field name="deposit_option" class="oe_inline" widget="radio"/>
                    <field name="currency_id" invisible="1"/>
                    <label for="amount"/>
                    <div>
                        <field name="amount" class="oe_inline" widget="monetary" invisible="deposit_option == 'percentage'"/>
                        <field name="percentage" class="oe_inline" invisible="deposit_option != 'percentage'"/>
                        <span invisible="deposit_option != 'percentage'" class="oe_inline">%</span>
                    </div>
                </group>
                <footer>
                    <button name="action_create_deposit" string="Create deposit" type="object" class="btn-primary"/>
                    <button string="Cancel" class="btn-secondary" special="cancel"/>
                </footer>
            </form>
        </field>
    </record>

    <record id="action_order_make_deposit" model="ir.actions.act_window">
        <field name="name">Make a Deposit</field>
        <field name="res_model">order.make.deposit</field>
        <field name="view_mode">form</field>
        <field name="target">new</field>
    </record>
</odoo>
